                    <i class="fas fa-globe-americas" style="margin-right: 10px"></i>
                    <p class="m-0">Curiosity</p>
                  </div>
                </div>
                <div class="flip-card-back">
                  <p>Description</p>
                </div>
            <% end %>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>

