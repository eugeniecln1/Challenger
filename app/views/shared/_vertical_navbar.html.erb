<div class="nav fixed-top" id="mySidenav">

  <a id="myBtn"><i class="fas fa-chevron-right"></i></a>

  <%= link_to dashboard_path, class: "navbar-logo" do %>
    <%= image_tag "dragon_blanc.png", size: "80", class: "logo animated flip" %>
  <% end %>

  <% if user_signed_in? %>
    <div class="user-id d-flex">
      <div class="online-badge"></div>
      <p style="color: white"><%= current_user.username %></p>
    </div>
  <% else %>
  <% end %>

  <%= link_to challenges_home_path, class: "navlink new" do %>
    <i class="logo-n fas fa-plus"></i>Challenge
  <% end unless yield(:page) == "challenges" || yield(:page) == 'challenge'%>

  <div class="menu d-flex flex-column">

    <%= link_to dashboard_path, class: "navlink #{'active' if yield(:page) == 'dashboard'}" do %>
      <i class="logo-d fas fa-home" id="i"></i>Dashboard
    <% end %>

    <%= link_to challenges_home_path, class: "navlink #{'active' if yield(:page) == 'challenges' || yield(:page) == 'challenge' }" do %>
      <i class="logo-c fab fa-cuttlefish" id="i"></i>Challenges
    <% end %>

    <%= link_to participations_path, class: "navlink #{'active' if yield(:page) == 'journal'}" do %>
      <i class="logo-j far fa-newspaper" id="i"></i>Journal
    <% end %>

    <%= link_to role_models_path, class: "navlink #{'active' if yield(:page) == 'inspiration'}" do %>
      <i class="logo-i fas fa-lightbulb" id="i"></i>Inspirations
    <% end %>

    <%= link_to destroy_user_session_path, method: :delete, data: { confirm: 'Are you sure?' }, class: "navlink bottom" do %>
      <i class="logo-s fas fa-sign-out-alt" id="i"></i>Sign out
    <% end %>
  </div>
</div>

<div id="main">

</div>
