<div class="follow" data-participation-id="<%= participation.id %>">
  <div class="notification">
    <div class="notification-content">
      <p style="margin-bottom: 5px"><strong><%= participation.challenge.title %></strong></p>
      <div class="d-flex align-items-center">
        <%= image_tag(participation.challenge.role_model.picture, class:"avatar-small", alt: "avatar-small" ) %>
        <p style="margin-left: 10px;"><em>Inspired by </em><%= link_to "#{participation.challenge.role_model.first_name} #{participation.challenge.role_model.last_name}", role_model_path(participation.challenge.role_model) %></p>
      </div>
    </div>
    <div class="notification-actions">
      <a href="#" id="check" data-toggle="modal" data-target="#exampleModal<%= participation.id %>"><i class="far fa-check-circle fa-lg"></i></a>
    </div>
  </div>
  <div class="progress">
    <div id="bar" class="progress-bar progress-bar-striped <%= participation.challenge.category.gsub(/\s+/, "").downcase %>" role="progressbar" style="width: 20%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
  </div>
</div>
