<%= content_for(:page, "inspiration") %>

<!-- # search bar
# profile cards -->
<div class="container">
<%= form_tag role_models_path, method: :get do %>
  <div class="search-form-control form-group">
    <%= text_field_tag :query,
      params[:query],
      class: "form-control string required", type: "text",
      placeholder: "Find an inspiring model ðŸ¤—  "
    %>
    <%= button_tag "Inspire me !", name:"button", type:"submit", title:"Inspire me!", class:"btn btn-flat btn-success"%>
  </div>
<% end %>
</div>

<!-- search bar -->
<div class="container">
  <div class="card-columns">
  <!-- list role models -->
<!-- <div class="col-sm-8 col-sm-offset-2"> -->
    <% @role_models.each do |role_model| %>
      <div class="model_profile_card card p-3" title='<%= role_model.first_name %> <%= role_model.last_name %>'>
        <blockquote class="card-body mb-0">
            <%= link_to '', role_model_path(role_model), class: "stretched-link" %>
            <%= image_tag(role_model.picture, class:"avatar-large", alt: "avatar-large" ) if role_model.picture %>
            <h5 class="card-title"><%= role_model.first_name %> <%= role_model.last_name %></h5>
            <p class="card-subtitle mb-2 text-muted "><%= role_model.sector %></p>
        </blockquote>
      </div>
    <% end %>
  </div>
</div>

